<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/veil_surface"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPersonaName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Persona Name"
                android:textColor="@color/veil_text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mood: Neutral"
                android:textColor="@color/veil_text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvInterest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interest: #general"
                android:textColor="@color/veil_text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>